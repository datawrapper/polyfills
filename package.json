  "license": "ISC",
  "devDependencies": {
    "ava": "~3.5.0",
    "babel-eslint": "~10.1.0",
    "caniuse-api": "^3.0.0",
    "esm": "~3.2.25",
    "healthier": "~3.3.0",
    "husky": "~4.2.3",
    "lint-staged": "~10.0.8",
    "lodash.range": "~3.2.0",
    "microbundle": "~0.11.0",
    "prettier": "~1.19.1",
    "request": "~2.88.2",
    "tap-xunit": "~2.4.1",
    "useragent-generator": "~1.1.0"
  },
  "ava": {
    "require": [
      "esm"
    ]
  },
  "prettier": {
    "tabWidth": 4,
    "semi": true,
    "printWidth": 100,
    "singleQuote": true
  },
  "husky": {
